<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Flashcards</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div id="app">
        <h1>All Flashcards</h1>
        <div id="flashcard-container">
            <% if (flashcards.length > 0) { %>
                <% flashcards.forEach((card, index) => { %>
                    <div class="flashcard" style="display: none;">
                        <p><strong>Card <%= index + 1 %></strong></p>
                        <p>Front: <%= card.front %></p>
                        <p>Back: <%= card.back %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No flashcards available.</p>
            <% } %>
        </div>
        <% if (flashcards.length > 0) { %>
            <div id="navigation">
                <button onclick="prevCard()">&#8592; Previous</button>
                <span id="card-number">Card 1 of <%= flashcards.length %></span>
                <button onclick="nextCard()">Next &#8594;</button>
            </div>
        <% } %>
        <a href="/" class="button">Back to Home</a>
    </div>
    <script src="script.js"></script>
</body>
</html>