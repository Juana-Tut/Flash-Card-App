<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flashcards List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div id="app">
        <h1>Flashcards List</h1>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Front</th>
                    <th>Back</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% flashcards.forEach(card => { %>
                    <tr>
                        <td><%= card.id %></td>
                        <td><%= card.front %></td>
                        <td><%= card.back %></td>
                        <td>
                            <a href="/api/flashcards/update/<%= card.id %>" class="button">Edit</a>
                            <form action="/api/flashcards/delete/<%= card.id %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this flashcard?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <div id="navigation">
            <a href="/" class="button">Back to Home</a>
            <a href="/api/flashcards/view" class="button">Study Mode</a>
        </div>
        
    </div>
    <%-include('partials/footer')%>
</body>
</html>